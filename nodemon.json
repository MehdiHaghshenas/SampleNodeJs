{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "README.md",
        "swagger_output.json"
    ],
    "verbose": true,
    "exec": "ts-node ./source/server.ts",
    "watch": [
        "source/**/*.ts"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}